/* pages/pc/pc.wxss */
page {
  /* background-color: white; */
}
.t-swipe-cell-demo-btn-wrapper {
  height: 100%;
}

.t-swipe-cell-demo-btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 144rpx !important;
  height: 100%;
  text-align: center;
  color: white;
}
.t-swipe-cell-demo-btn.delete-btn {
  background-color: #e34d59;
}

.t-swipe-cell-demo-btn.edit-btn {
  background-color: #ed7b2f;
}
.pc__list{
  margin-top: 10rpx;
}
.pc__run{
  background: #555 !important;
  /* color: black !important; */
  border-color: #555 !important;
}
.pc__item:active{
  border: 1px solid red;
}
.pc__card{
  display: flex;
  align-items: center;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin: 10rpx;
  height: 200rpx;
  border: 1px solid #eee;
  border-radius: 5px;
  background-color: #8EC5FC;
  /* background-color: #8EC5FC;
background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%); */

}
.pc__icon{
  color: #fff;
}
.pc__content{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  margin-left: 20rpx;
  color: #fff;
}
.pc__empty{
  display: flex;
  justify-content: center;
  padding-top: 400rpx;
  height: 100vh;
  box-sizing: border-box;
}

.t-empty__button{
    position: absolute !important;
    left: 50%;
    bottom: 150rpx;
    transform: translateX(-50%);
    z-index: 1;
    padding: 0 50rpx !important;
}

@font-face {
  font-family: 't';
  src: url('//at.alicdn.com/t/c/font_3613772_40rj6ojuk87.woff2?t=1661581746304') format('woff2'),
       url('//at.alicdn.com/t/c/font_3613772_40rj6ojuk87.woff?t=1661581746304') format('woff'),
       url('//at.alicdn.com/t/c/font_3613772_40rj6ojuk87.ttf?t=1661581746304') format('truetype');
  /* iOS 4.1- */
  font-weight: normal;
  font-style: normal;
}
.t-icon-base {
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  text-align: center;
  display: block;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.t-icon {
  /* stylelint-disable-next-line declaration-no-important */
  font-family: 't' !important;
  /* prevent issues with browser extensions that change fonts */
}

.t-icon-pc:before {
  content: '\e61f' !important;
}
.t-icon-p::before{
  content: "\e665" !important;
}